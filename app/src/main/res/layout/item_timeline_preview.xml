<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">

  <ImageView
    android:id="@+id/timeline_preview_image"
    android:layout_width="100dp"
    android:layout_height="0dp"
    android:contentDescription="Preview Image"
    app:layout_constraintDimensionRatio="h,16:9"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@color/primaryColor"
    tools:ignore="HardcodedText" />

  <TextView
    android:id="@+id/timeline_preview_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/primaryTextColor"
    android:textSize="24sp"
    app:layout_constraintBottom_toBottomOf="@id/timeline_preview_image"
    app:layout_constraintEnd_toEndOf="@id/timeline_preview_image"
    app:layout_constraintStart_toStartOf="@id/timeline_preview_image"
    app:layout_constraintTop_toTopOf="@id/timeline_preview_image"
    tools:text="00:00" />

  <ImageView
    android:id="@+id/timeline_preview_anchor"
    android:layout_width="10dp"
    android:layout_height="10dp"
    android:layout_marginTop="2dp"
    android:contentDescription="Preview anchor"
    android:rotation="180"
    android:tint="@color/primaryLightColor"
    app:layout_constraintDimensionRatio="h,1:1"
    app:layout_constraintEnd_toEndOf="@id/timeline_preview_image"
    app:layout_constraintStart_toStartOf="@id/timeline_preview_image"
    app:layout_constraintTop_toBottomOf="@id/timeline_preview_image"
    app:srcCompat="@drawable/ic_timeline_anchor"
    tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>
